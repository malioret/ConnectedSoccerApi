<?php

namespace 
{
    class AppKerne_ extends AppKernel
    {
        public function getCacheDir()
        {
            return '/Applications/MAMP/htdocs/ConnectedSoccerPhp/app/cache/de_';
        }

        public function getName()
        {
            return 'ap_';
        }

        public function getRootDir()
        {
            return '/Applications/MAMP/htdocs/ConnectedSoccerPhp/app';
        }

        public function getLogDir()
        {
            return '/Applications/MAMP/htdocs/ConnectedSoccerPhp/app/logs';
        }

        protected function buildContainer()
        {
            $container = parent::buildContainer();

            // filter container's resources, removing reference to temp kernel file
            $resources = $container->getResources();
            $filteredResources = array();
            foreach ($resources as $resource) {
                if ((string) $resource !== __FILE__) {
                    $filteredResources[] = $resource;
                }
            }

            $container->setResources($filteredResources);

            return $container;
        }
    }
}